{% extends 'base.html.twig' %}


{% block body %}
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>category</th>
                <th>content</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{post.id}}</td>
                    <td>{{post.title}}</td>
                    <td>{{post.name}}</td>
                    {# <td>{{post.category.name}}</td> #}
                    <td>{{post.content}}</td>
                </tr>
            {% else %}
                <tr><td colspan="4">Pas d'articles pour le moment</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
